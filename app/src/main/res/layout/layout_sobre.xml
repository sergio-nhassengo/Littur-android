<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity_Sobre">


    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sobreAplicativo"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/texto2"
        android:layout_below="@id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por: "
        android:textSize="16dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/texto3"
        android:layout_toRightOf="@id/texto2"
        android:layout_below="@id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sergio Alberto Nhassengo"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/texto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto3"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        android:text="Sugestoes, criticas e duvidas serao sempre bem vindas. Para tal, o email abaixo serve como contacto:"/>
    <TextView
        android:id="@+id/texto5"
        android:layout_below="@id/texto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sergionhassengo@gmail.com"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto5"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        android:text="Liturgia\nVersao: 1\n\n2018, Maputo, Mocambique"
        android:textStyle="italic"
        />
</LinearLayout>